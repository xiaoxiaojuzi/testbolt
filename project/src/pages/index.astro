---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Auth App</h1>
    <p class="text-lg text-gray-600 mb-8">A secure authentication system built with Astro</p>
    <div class="space-x-4">
      <a
        href="/signin"
        class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700"
      >
        Sign In
      </a>
      <a
        href="/signup"
        class="inline-block bg-white text-indigo-600 px-6 py-3 rounded-md border border-indigo-600 hover:bg-indigo-50"
      >
        Sign Up
      </a>
    </div>
  </div>
</MainLayout>